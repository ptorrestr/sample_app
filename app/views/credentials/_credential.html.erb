<li>
  <span class="credential_name"><%= credential.name %></span>
  <span class="consumer">Consumer: <%= credential.consumer %></span>
  <span class="access">Access: <%= credential.access %></span>
  <% if current_user?(credential.user) %>
    <!-- Button to trigger modal -->
    <a href="#modalCredential" role="button" data-toggle="modal" class="btn btn-small btn-warning" title="Delete credential"> <i class="icon-trash icon-black"></i></a>

    <!-- Modal -->
    <div id="modalCredential" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Delete credential</h3>
      </div>
      <div class="modal-body">
        <p>Are you sure you want delete this credential?</p>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <%= link_to "Delete it", credential, method: :delete, remot: true, class: "btn btn-small btn-warning" %>
      </div>
    </div>
  <% end %>
</li>
