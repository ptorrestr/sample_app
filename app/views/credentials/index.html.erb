<% provide(:title, 'Credentials') %>
<h1>Credentials</h1>
<div class="row">
  <div class="span8">
    <p>
      In order to use Quiltro each users must have a register Twitter developer account. These are your current Twitter developer account credentials.
    </p>
    <%= will_paginate %>
    <ol class="credentials">
      <%= render @credentials %>
    </ol>
    <%= will_paginate %>
  </div>
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/credential_form' %>
    </section>
  </aside>
</div>
