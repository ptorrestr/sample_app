<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/search_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Search Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Quiltro</h1>
    <%= image_tag("quiltro.jpg", alt: "quiltro") %>
    <h2>
      This app is developed by
      <a href="http://hujo.deri.ie/">hujo</a>
      project.
    </h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %>
