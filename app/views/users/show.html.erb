<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.searches.any? %>
      <h3> Searches (<%= @user.searches.count %>)</h3>
      <ol class="searches">
        <%= render @searches %>
      </ol>
      <%= will_paginate @searches %>
    <% end %>
  </div>
</div>
