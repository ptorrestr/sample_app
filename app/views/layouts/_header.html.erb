<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "quiltro", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li>
            <%= link_to root_path do %>
              <i class="icon-home icon-white"></i> Home
            <% end %>
          </li>
          <li>
            <%= link_to help_path do %>
              <i class="icon-question-sign icon-white"></i> Help
            <% end %>
          </li>
          <% if signed_in? %>
            <% if admin_user? %>
                <li><%= link_to "Users", users_path %></li>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-search icon-white"></i> 
                Search <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to searches_path(current_user) do %>
                    <i class="icon-book icon-black"></i> Historical
                  <% end %>
                </li>
                <li>
                  <%= link_to streamings_path(current_user) do %>
                    <i class="icon-refresh icon-black"></i> Streaming
                  <% end %>
                </li>
              </ul>
            </li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="icon-user icon-white"></i> 
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <!-- <li><%= link_to "Profile", current_user %></li> -->
                <li>
                  <%= link_to edit_user_path(current_user) do %>
                    <i class="icon-edit icon-black"></i> Settings
                  <% end %>
                </li>
                <li>
                  <%= link_to credentials_path(current_user) do %>
                    <i class="icon-wrench icon-black"></i> Credentials
                  <% end %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to signout_path, method: "delete" do %>
                    <i class="icon-off icon-black"></i> Sign out
                  <% end %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
